<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.androidhuman.example.materialdrawer.fulloverlay.AddClassFragment"
    android:orientation="vertical"
    android:weightSum="1">

    <!-- TODO: Update blank fragment layout -->

    <TextView android:layout_width="wrap_content" android:layout_height="wrap_content"
        android:text="@string/title_add_class"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="0dp"
        android:layout_alignParentTop="true"
        android:layout_marginTop="0dp"
        android:id="@+id/textView" />

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:stretchColumns="1"
        android:layout_weight="0.55">

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="title"
                android:id="@+id/textView2" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtTitle"
                android:width="200dp"
                android:layout_alignBottom="@+id/textView2"
                android:layout_alignLeft="@+id/btn_add_class"
                android:layout_alignStart="@+id/btn_add_class" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="content"
                android:id="@+id/textView3" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtContent"
                android:layout_above="@+id/textView7"
                android:layout_alignLeft="@+id/edtEndTime"
                android:layout_alignStart="@+id/edtEndTime"
                android:width="200dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="date"
                android:id="@+id/textView4" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtDate"
                android:layout_above="@+id/textView4"
                android:layout_alignLeft="@+id/edtTitle"
                android:layout_alignStart="@+id/edtTitle"
                android:width="200dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="start time"
                android:id="@+id/textView5" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtStartTime"
                android:layout_above="@+id/textView5"
                android:layout_alignLeft="@+id/edtDate"
                android:layout_alignStart="@+id/edtDate"
                android:width="200dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="end time"
                android:id="@+id/textView6" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtEndTime"
                android:layout_alignBottom="@+id/textView5"
                android:layout_alignLeft="@+id/edtStartTime"
                android:layout_alignStart="@+id/edtStartTime"
                android:width="200dp" />

        </TableRow>

        <TableRow
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <TextView
                android:layout_width="80dp"
                android:layout_height="wrap_content"
                android:text="place"
                android:id="@+id/textView7" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/edtPlace"
                android:layout_alignBottom="@+id/textView7"
                android:layout_alignLeft="@+id/edtContent"
                android:layout_alignStart="@+id/edtContent"
                android:width="200dp" />

        </TableRow>

    </TableLayout>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Add"
        android:id="@+id/btn_add_class"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_alignParentLeft="false" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete All"
        android:id="@+id/btn_delete_all"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/btn_add_class"
        android:layout_toEndOf="@+id/btn_add_class" />

</LinearLayout>
